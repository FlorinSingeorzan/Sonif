                <html:div class="loginForm">
                    <html:a class="loginText">Login</html:a>
                    <FlexBox class="fade_line llogin "/>

                    <html:form class="" method="post" id="loginForm" target="_self" onsubmit="loginUser();return false">
                    <VBox>
                        <Input class="loginInput sapUiLargeMarginTop" name="username" textAlign="Center"  width="50%"  placeholder="Username"/>
                        <Input class="loginInput sapUiLargeMarginTop" name="password" textAlign="Center" type="Password" width="50%"   placeholder="Password"/>
